<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
    <persistence-unit name="SITE">
        <class>mx.com.icvt.persistence.impl.news.Noticia</class>
        <exclude-unlisted-classes/>
        <properties>
            <property name="javax.jdo.PersistenceManagerFactoryClass" value="org.datanucleus.api.jdo.JDOPersistenceManagerFactory"/>
            <property name="javax.jdo.option.ConnectionURL" value="jdbc:mysql://localhost:3306/siteDB?useServerPrepStmts=false"/>
            <property name="javax.jdo.option.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
            <property name="javax.jdo.option.ConnectionUserName" value="cesar"/>
            <property name="javax.jdo.option.ConnectionPassword" value="password"/>
            <property name="datanucleus.query.jdoql.allowAll" value="true"/>

        </properties>
    </persistence-unit>
</persistence>