<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mock-impl" default="compile.module.mock-impl">
    <dirname property="module.mock-impl.basedir" file="${ant.file.module_mock-impl}"/>

    <property name="module.jdk.home.mock-impl" value="${project.jdk.home}"/>
    <property name="module.jdk.bin.mock-impl" value="${project.jdk.bin}"/>
    <property name="module.jdk.classpath.mock-impl" value="${project.jdk.classpath}"/>

    <property name="compiler.args.mock-impl" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>

    <property name="mock-impl.output.dir" value="${module.mock-impl.basedir}/target/classes"/>
    <property name="mock-impl.testoutput.dir" value="${module.mock-impl.basedir}/target/test-classes"/>

    <path id="mock-impl.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="mock-impl.module.production.classpath">
        <path refid="${module.jdk.classpath.mock-impl}"/>
    </path>

    <path id="mock-impl.runtime.production.module.classpath">
        <pathelement location="${mock-impl.output.dir}"/>
    </path>

    <path id="mock-impl.module.classpath">
        <path refid="${module.jdk.classpath.mock-impl}"/>
        <pathelement location="${mock-impl.output.dir}"/>
    </path>

    <path id="mock-impl.runtime.module.classpath">
        <pathelement location="${mock-impl.testoutput.dir}"/>
        <pathelement location="${mock-impl.output.dir}"/>
    </path>


    <patternset id="excluded.from.module.mock-impl">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.mock-impl">
        <patternset refid="excluded.from.module.mock-impl"/>
    </patternset>

    <path id="mock-impl.module.sourcepath">
        <dirset dir="${module.mock-impl.basedir}">
            <include name="src/main/java"/>
        </dirset>
    </path>

    <path id="mock-impl.module.test.sourcepath">
        <dirset dir="${module.mock-impl.basedir}">
            <include name="src/test/java"/>
        </dirset>
    </path>


    <target name="compile.module.mock-impl" depends="compile.module.mock-impl.production,compile.module.mock-impl.tests"
            description="Compile module mock-impl"/>

    <target name="compile.module.mock-impl.production" depends="register.custom.compilers"
            description="Compile module mock-impl; production classes">
        <mkdir dir="${mock-impl.output.dir}"/>
        <javac2 destdir="${mock-impl.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
                memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mock-impl}/javac">
            <compilerarg line="${compiler.args.mock-impl}"/>
            <bootclasspath refid="mock-impl.module.bootclasspath"/>
            <classpath refid="mock-impl.module.production.classpath"/>
            <src refid="mock-impl.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.mock-impl"/>
        </javac2>

        <copy todir="${mock-impl.output.dir}">
            <fileset dir="${module.mock-impl.basedir}/src/main/java">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.mock-impl.tests"
            depends="register.custom.compilers,compile.module.mock-impl.production"
            description="compile module mock-impl; test classes" unless="skip.tests">
        <mkdir dir="${mock-impl.testoutput.dir}"/>
        <javac2 destdir="${mock-impl.testoutput.dir}" debug="${compiler.debug}"
                nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true"
                executable="${module.jdk.bin.mock-impl}/javac">
            <compilerarg line="${compiler.args.mock-impl}"/>
            <bootclasspath refid="mock-impl.module.bootclasspath"/>
            <classpath refid="mock-impl.module.classpath"/>
            <src refid="mock-impl.module.test.sourcepath"/>
            <patternset refid="excluded.from.compilation.mock-impl"/>
        </javac2>

        <copy todir="${mock-impl.testoutput.dir}">
            <fileset dir="${module.mock-impl.basedir}/src/test/java">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="clean.module.mock-impl" description="cleanup module">
        <delete dir="${mock-impl.output.dir}"/>
        <delete dir="${mock-impl.testoutput.dir}"/>
    </target>
</project>