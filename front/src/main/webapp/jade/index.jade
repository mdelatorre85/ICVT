include mixins
doctype html
html.no-js
	
	include includes/head

	body
		
		include includes/header
		include includes/nav
		

		.panel-header-summary
			.container
				.row
					.profile-info.g4.cf
						.profile-pic
							img(src='http://placehold.it/80x80')
						.title
							h1 Textiles y acabados de México SA de CV

					.summary.g8
						.row
							.g3
								h3
									i.fa.fa-map-marker
									| Locación
								ul
									li Estado de Hidalgo
									li Tula de Allende
									li San Miguel Vindho

							.g3
								h3
									i.fa.fa-circle-o
									| Unidad económica
								ul
									li [314991] Confección, bordado y deshilado de productos textiles
							.g3
								h3
									i.fa.fa-users
									| Número de empleados
								ul
									li De 10 a 50 empleados

							.g3.profile-chart-container
								h3
									i.fa.fa-tasks
									| Perfil
								
								.chart.cf
									.percentage
										span.number.js-profileChartHomePercentage 100%
										span.tag Completado

									canvas#profileChartHome(height='70', width='70')
		
		.panel-widget-container
			.container
				.row
					.widget.widget-news.g4
						h2
							a(href='#') Actualidad en la industria

						ul
							- for(i=0 ; i<4 ; i++) {
							li.element
								.content.cf
									.pic
										a(href='#')
											img(src='http://placehold.it/80x80.gif')
									.title
										a(href='#') Crecimiento de Inditex se frena en 2013 por tipos de cambio.
									
								footer.info.cf
									ul
										li.source
											a(href='#')
												i.fa.fa-rss
												| El Financiero
										li.date 10-Feb-2014
								
							- }

						footer.action
							a(href='#').link Ver más
								i.fa.fa-arrow-right


					.widget.widget-alerts.g4
						h2
							a(href='#') Alertas y notifiaciones

						ul
							- for(i=0 ; i<4 ; i++) {
							li.element
								.content.cf
									.title
										a(href='#') Se prevee una alza en los precios de los materiales textiles para el primer trimestre del 2015.
									
								footer.info.cf
									ul
										li.date 20-Feb-2014
								
							- }

						footer.action
							a(href='#').link Ver más
								i.fa.fa-arrow-right

					.g4
						



		include includes/footer


		#data
			#profileChartHomeAnswered 80
			#profileChartHomeNoAnswered 10

		
		include includes/scripts

		script.

			$(window).bind("load", function() {

				profileChartHomeAnsweredValue = parseInt($('#profileChartHomeAnswered').text());
				profileChartHomeNoAnsweredValue = parseInt($('#profileChartHomeNoAnswered').text());

				console.log(profileChartHomeAnsweredValue);
				console.log(profileChartHomeNoAnsweredValue);

				var profileChartHomeData = [
					{
						value: profileChartHomeAnsweredValue,
						color: "#8CC63F"
					},
					{
						value : profileChartHomeNoAnsweredValue,
						color : "#E6E6E6"
					}

				];


				var profileChartHomeConfig = {
					segmentShowStroke : false,
					percentageInnerCutout : 70,
					animationSteps : 100,
					animationEasing : "easeOutCirc",
					animateRotate : true,
					animateScale : false,
					onAnimationComplete : null
				}
					


				var profileChartHome = new Chart(document.getElementById("profileChartHome").getContext("2d")).Doughnut(profileChartHomeData, profileChartHomeConfig);
			});
			
			
			
